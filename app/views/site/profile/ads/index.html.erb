<!-- Page Content -->
<div id="page-content-wrapper">
  <caption><h2>My Ads</h2></caption>
  <%= link_to new_site_profile_ad_path, class: "btn btn-success btn-sm pull-right" do %>
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
  <% end %>
  
  <div class="container-fluid">

    <div class="row">

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Category</th>
            <th>Price</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @ads.each do |ad| %>
          <tr>
            <td><%= image_tag ad.picture(:thumb) %></td>
            <td><%= ad.title %></td>
            <td><%= ad.category.description %></td>
            <td><%= humanized_money_with_symbol ad.price %></td>
            <td>
              <%= link_to edit_site_profile_ad_path(ad.id), class: "btn btn-primary btn-sm" do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>

            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- /#page-content-wrapper -->